<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <!-- This will be used to set the theme for the MainActivity in AndroidManifest.xml-->
    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--progressbar-->
    <style name="MyProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">#880e4f</item>
        <item name="android:textColorPrimary">#c60055</item>
        <item name="android:background"> #560027</item>
    </style>
    <!--progress color pagination-->
    <style name
        ="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

</resources>
